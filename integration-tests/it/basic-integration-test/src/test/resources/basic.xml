<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:basic="http://www.mulesoft.org/schema/mule/basic"
      xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/3.1/mule.xsd
        http://www.mulesoft.org/schema/mule/basic http://www.mulesoft.org/schema/mule/basic/current/mule-basic.xsd">

    <basic:config myInt="${my.int}" myLong="${my.long}" myBigDecimal="10.2" myBigInteger="10" />

    <spring:bean id="refObject" class="org.mule.devkit.it.MyComplexObject">
        <spring:property name="value" value="MuleSoft$"/>
    </spring:bean>

    <flow name="pollPassthruStringFlow">
        <poll frequency="60000">
            <basic:passthru-string value="mulesoft"/>
        </poll>
        <basic:passthru-string value="mulesoft"/>
    </flow>

    <flow name="passthruCharFlow">
        <basic:passthru-char value="c"/>
    </flow>

    <flow name="passthruStringFlow">
        <basic:passthru-string value="mulesoft"/>
    </flow>

    <flow name="passthruIntegerFlow">
        <basic:passthru-integer value="3"/>
    </flow>

    <flow name="passthruFloatFlow">
        <basic:passthru-float value="3.14"/>
    </flow>

    <flow name="passthruBooleanFlow">
        <basic:passthru-boolean value="true"/>
    </flow>

    <flow name="passthruLongFlow">
        <basic:passthru-long value="3456443463342345734"/>
    </flow>

    <flow name="passthruEnumFlow">
        <basic:passthru-enum mode="In"/>
    </flow>

    <flow name="passthruComplexRef">
        <basic:passthru-complex-ref myComplexObject-ref="refObject"/>
    </flow>

    <flow name="passthruBigDecimal">
        <basic:passthru-big-decimal value="10.2"/>
    </flow>


    <flow name="passthruBigInteger">
        <basic:passthru-big-integer value="18"/>
    </flow>


</mule>
