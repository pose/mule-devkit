<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:collection="http://www.mulesoft.org/schema/mule/collection"
      xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/3.1/mule.xsd
        http://www.mulesoft.org/schema/mule/collection http://www.mulesoft.org/schema/mule/collection/current/mule-collection.xsd">

    <spring:bean id="objectA" class="java.lang.String">
        <spring:constructor-arg value="ObjectA"/>
    </spring:bean>

    <spring:bean id="objectB" class="java.lang.String">
        <spring:constructor-arg value="ObjectB"/>
    </spring:bean>

    <spring:bean id="objectC" class="java.lang.String">
        <spring:constructor-arg value="ObjectC"/>
    </spring:bean>

    <spring:bean id="list" class="org.springframework.beans.factory.config.ListFactoryBean">
        <spring:property name="sourceList">
            <spring:list>
                <spring:ref bean="objectA"/>
                <spring:ref bean="objectB"/>
                <spring:ref bean="objectC"/>
            </spring:list>
        </spring:property>
    </spring:bean>

    <collection:config name="configA">
        <collection:strings>
            <collection:string>#[string:MuleSoft]</collection:string>
            <collection:string>FTW</collection:string>
        </collection:strings>
    </collection:config>

    <collection:config name="configB">
        <collection:items>
            <collection:item value-ref="objectA"/>
            <collection:item value-ref="objectB"/>
        </collection:items>
    </collection:config>

    <collection:config name="configD">
        <collection:map-items>
            <collection:map-item key-ref="objectA" value-ref="objectA"/>
            <collection:map-item key-ref="objectB" value-ref="objectB"/>
        </collection:map-items>
    </collection:config>

    <collection:config name="configC">
        <collection:map-strings>
            <collection:map-string key="a">#[string:MuleSoft]</collection:map-string>
            <collection:map-string key="b">FTW</collection:map-string>
        </collection:map-strings>
    </collection:config>

    <collection:config name="configE">
        <collection:items ref="list"/>
    </collection:config>

    <flow name="flowList">
        <collection:count-list-of-strings config-ref="configA">
            <collection:strings>
                <collection:string>mulesoft</collection:string>
                <collection:string>ftw</collection:string>
            </collection:strings>
        </collection:count-list-of-strings>
    </flow>

    <flow name="flowConfigStrings">
        <collection:count-config-strings config-ref="configA"/>
    </flow>

    <flow name="flowConfigItems">
        <collection:count-config-items config-ref="configB"/>
    </flow>

    <flow name="flowMap">
        <collection:count-map-of-strings config-ref="configC">
            <collection:map-strings>
                <collection:map-string key="a">mulesoft</collection:map-string>
                <collection:map-string key="b">ftw</collection:map-string>
            </collection:map-strings>
        </collection:count-map-of-strings>
    </flow>

    <flow name="flowMapOfObjects">
        <collection:count-map-of-objects config-ref="configC">
            <collection:map-objects>
                <collection:map-object key="a">mulesoft</collection:map-object>
                <collection:map-object key="b">#[payload]</collection:map-object>
            </collection:map-objects>
        </collection:count-map-of-objects>
    </flow>

    <flow name="flowConfigMapStrings">
        <collection:count-config-map-strings config-ref="configC"/>
    </flow>

    <flow name="flowConfigMapItems">
        <collection:append-config-map-items config-ref="configD"/>
    </flow>

    <flow name="flowHasFirstName">
        <collection:has-first-name config-ref="configC">
            <collection:properties>
                <FirstName>Emiliano</FirstName>
                <LastName>Lesende</LastName>
            </collection:properties>
        </collection:has-first-name>
    </flow>

    <flow name="flowNested">
        <collection:accept-nested config-ref="configC">
            <collection:objects>
                <collection:object>
                    <Title>Mr.</Title>
                    <FirstName>Emiliano</FirstName>
                    <LastName>#[string:Lesende]</LastName>
                </collection:object>
            </collection:objects>
        </collection:accept-nested>
    </flow>

    <flow name="flowConfigItemsRefList">
        <collection:count-config-items config-ref="configE"/>
    </flow>

    <flow name="flowCountTwoLists">
        <collection:count-two-lists config-ref="configE">
            <collection:first-lists>
                <collection:first-list>itemA</collection:first-list>
                <collection:first-list>itemB</collection:first-list>
                <collection:first-list>itemC</collection:first-list>
            </collection:first-lists>
            <collection:second-lists>
                <collection:second-list>itemA</collection:second-list>
                <collection:second-list>itemB</collection:second-list>
            </collection:second-lists>
        </collection:count-two-lists>
    </flow>

    <flow name="flowRetrieveKey">
        <collection:retrieve-key key="b" config-ref="configC">
            <collection:map-strings>
                <collection:map-string key="a">#[map-payload:a]</collection:map-string>
                <collection:map-string key="b">#[map-payload:b]</collection:map-string>
            </collection:map-strings>
        </collection:retrieve-key>
    </flow>

    <flow name="flowMapOfLists">
        <collection:map-of-lists config-ref="configA">
            <collection:map>
                <collection:map key="key1" value-ref="list" />
                <collection:map key="key2" value-ref="list" />
            </collection:map>
        </collection:map-of-lists>
    </flow>

    <flow name="flowListOfMapsWithRef">
        <collection:list-of-maps config-ref="configA">
            <collection:objects>
                <collection:object ref="#[payload]"/>
            </collection:objects>
        </collection:list-of-maps>
    </flow>
</mule>
